<style>
  .community {
    background-color: #fefde9;
  }

  h2 {
    font-size: 1.8rem;
    margin-bottom: 5rem;
  }

  .mobile-heading {
    display: block;
    text-align: center;
  }

  .desktop-heading {
    display: none;
  }

  .content {
    margin-top: -50px;
    display: flex;
    flex-direction: column;
    gap: 2rem;

    align-items: center;
  }

  .map-wrapper {
    position: relative;
    width: 100%;
    max-width: 550px;
  }

  .map {
    width: 100%;
    display: block;
    border-radius: 0px;
  }

  .marker {
    position: absolute;
    transform: translate(-50%, -100%);
    width: 4vw;
    cursor: pointer;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Marker-billeder */
  .marker-default,
  .marker-hover {
    position: absolute;
    width: 100%;
    transition: opacity 0.5s ease;
  }

  /* Hover logic med opacity fremfor display (mere smooth + stabilt) */
  .marker-hover {
    opacity: 0;
    pointer-events: none;
    z-index: 2;
  }

  .marker:hover {
    z-index: 10;
  }

  .marker:hover .marker-default {
    opacity: 0;
  }

  .marker:hover .marker-hover {
    opacity: 1;
    pointer-events: auto;
    width: 110px;
  }

  .text {
    line-height: 1.8;
    max-width: 550px;
    text-align: center;
    margin-top: -50px;
  }

  .event-link {
    display: block;
    margin-top: -1rem;
    font-weight: bold;
    color: #f6451a;
    text-decoration: underline;
  }

  /* üíª Desktop layout */
  @media (min-width: 768px) {
    .content {
      flex-direction: row-reverse;
      justify-content: center;
      gap: 0rem;
      margin-top: auto;
    }

    .text {
      text-align: left;
      margin-bottom: 5rem;
      font-size: clamp(0.8rem, 1.5vw, 2rem);
      margin-right: 2rem;
    }

    .mobile-heading {
      display: none;
    }

    .desktop-heading {
      display: block;
      text-align: left;
      margin-bottom: 1rem;
    }
    .community {
      padding: 2rem;
    }

    h2 {
      text-align: left;
      font-size: 2.2rem;
    }
    .marker {
      width: 2vw;
    }
    .marker:hover .marker-hover {
      width: 170px;
    }
  }
</style>
