<style>
  .community {
    background-color: #fefde9;
    padding: 2rem;
  }

  h2 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
  }

  .mobile-heading {
    display: block;
    text-align: center;
  }

  .desktop-heading {
    display: none;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .map-wrapper {
    position: relative;
    width: 100%;
    max-width: 700px;
  }

  .map {
    width: 100%;
    display: block;
    border-radius: 10px;
  }

  .marker {
    position: absolute;
    transform: translate(-50%, -100%);
    width: 30px;
    cursor: pointer;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Marker-billeder */
  .marker-default,
  .marker-hover {
    position: absolute;

    width: 100%;
    transition: opacity 0.5s ease;
  }

  /* Hover logic med opacity fremfor display (mere smooth + stabilt) */
  .marker-hover {
    opacity: 0;
    pointer-events: none;
    z-index: 2;
  }

  .marker:hover {
    z-index: 10; /* S√∏rg for at den er foran alt andet */
  }

  .marker:hover .marker-default {
    opacity: 0;
  }

  .marker:hover .marker-hover {
    opacity: 1;
    pointer-events: auto;
    width: 150px; /* Hvis du √∏nsker at udvide det */
  }

  .text {
    font-size: 1.2rem;
    line-height: 1.8;
    max-width: 500px;
    text-align: center;
    padding-bottom: 30px;
  }

  .event-link {
    display: block;
    margin-top: -1rem;
    font-weight: bold;
    color: #f6451a;
    text-decoration: underline;
  }

  /* üíª Desktop layout */
  @media (min-width: 768px) {
    .content {
      flex-direction: row-reverse;
      justify-content: center;
      align-items: flex-start;
      gap: 3rem;
    }

    .text {
      text-align: left;
      padding-bottom: 0;
    }

    .mobile-heading {
      display: none;
    }

    .desktop-heading {
      display: block;
      text-align: left;
      margin-bottom: 1rem;
    }

    h2 {
      text-align: left;
    }
  }
</style>
