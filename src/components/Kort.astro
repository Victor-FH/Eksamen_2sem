<style>
  .community {
    background-color: #fefde9;
    padding: 2rem 2rem;
  }

  h2 {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .map-wrapper {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .map {
    width: 100%;
    display: block;
    border-radius: 10px;
  }

  .marker {
    position: absolute;
    width: 35px;
    transform: translate(-50%, -100%);
  }

  .text {
    font-size: 1.2rem;
    line-height: 1.8;
    max-width: 500px;
    padding-bottom: 30px;
    text-align: center;
  }

  .event-link {
    display: block;
    margin-top: -1rem;
    font-weight: bold;
    color: #f6451a;
    text-decoration: underline;
  }

  /* üíª Desktop layout fix */
  @media (min-width: 768px) {
