---
const desktopImage = "/billeder/herobilleder.webp";
const mobileImage = "/billeder/mobilherobilleder.webp";
---

<section class="hero">
  <div class="scroll-container">
    <picture>
      <!-- Desktop when ≥768px -->
      <source media="(min-width: 768px)" srcset={desktopImage} />
      <!-- Mobile-first fallback -->
      <img src={mobileImage} alt="Tøjdele collage" class="hero-image" loading="lazy" />
    </picture>
  </div>

  <div class="hero-content">
    <h1>Dit tøjfællesskab</h1>
    <h2>Dele-tøj på abonnement</h2>
    <button class="cta"><a href="/medlem">Bliv medlem</a></button>
  </div>
</section>

<style>
  /* — mobile-first — */

  .hero {
    height: 95%;
    position: relative;
    overflow: hidden;
    background: #f9f4e7;
  }

  .scroll-container {
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE10+ */
  }
  .scroll-container::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }

  .hero-image {
    display: block;
    width: 100%; /* span full viewport width */
    height: auto;
    object-fit: cover;
    object-position: center top; /* show top edge, crop bottom/right */
  }

  .hero-content {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    padding: 0 1rem;
  }
  .hero-content h1 {
    margin: 0;
    color: #ec5a34;
    font-size: clamp(3rem, 4vw, 4rem);
    white-space: nowrap;
  }
  .hero-content h2 {
    margin: 0.5rem 0 2rem;

    font-size: clamp(0.75rem, 4vw, 1.2rem);
    color: #000;
    white-space: nowrap;
  }
  .hero-content .cta {
    background: #fff;
    border: 2px solid #ec5a34;
    color: #ec5a34;
    padding: 1rem 2rem;
    font-size: 2rem;
    border-radius: 4px;
    cursor: pointer;
    transition:
      transform 0.15s ease-out,
      box-shadow 0.15s ease-out,
      border-color 0.15s ease-out;
  }
  .hero-content .cta:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
    border-color: #d35400;
  }

  .cta a {
    text-decoration: none;
    color: #ec5a34;
  }

  /* — scale up for desktop — */
  @media (min-width: 768px) {
    .hero-image {
      width: 100%;
      height: auto;
      object-position: center center;
      padding-bottom: 2rem;
    }
    .hero-content h1 {
      font-size: clamp(2rem, 6vw, 6rem);
    }
    .hero-content h2 {
      font-size: clamp(1rem, 3vw, 1.7rem);
    }
  }
</style>
