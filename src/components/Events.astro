<style>
  .event-wrapper {
    padding: 2rem;
    font-family: serif;
    max-width: 1000px;
    margin: auto;
    display: flex;
    gap: 2rem;
  }

  .image-column,
  .event-column {
    display: grid;
    grid-template-rows: repeat(4, auto); /* 4 rækker */
    gap: 1rem;
  }

  .event-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .event-column {
    flex: 2;
    display: flex;
    flex-direction: column;
  }

  .event {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    position: relative;
  }

  .event-date {
    min-width: 130px;
    padding-top: 1rem;
    border-top: 1px solid black;
  }

  .event-date-inner {
    font-weight: bold;
    font-size: 1rem;
  }

  .event-date-inner h3 {
    font-weight: bold;
    font-size: 1.5rem;
    margin: -10px auto;
  }

  .event:last-child .event-date {
    border-bottom: 1px solid black;
  }

  .event-details {
    flex: 1;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    border-top: 1px solid black;
  }

  .details-text {
    display: flex;
    flex-direction: column;
  }

  .event:last-child .event-details {
    border-bottom: 1px solid black;
  }

  .event-location {
    font-weight: bold;
    font-size: 1.5rem;
    margin-bottom: 0.2rem;
  }

  .signup-button {
    background-color: #ec5a34;
    color: white;
    padding: 0.8rem 2rem;
    border: none;
    border-radius: 0.4rem;
    font-weight: bold;
    cursor: pointer;

    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }
</style>
