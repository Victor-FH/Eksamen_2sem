---
const SUPA_URL = "https://bwzlyynicfdhqxvfotfg.supabase.co/rest/v1/begivenheder";
const SUPA_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImJ3emx5eW5pY2ZkaHF4dmZvdGZnIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDgzMjk5NjUsImV4cCI6MjA2MzkwNTk2NX0.iWIvQ6JD4u7LRTB0dUL8CuJFoys5U8sWInPGsV-kdjM";

// build a URL that selects all needed cols, orders by index_by, limits to 4
const url = new URL(SUPA_URL);
url.searchParams.set("select", ["by", "dato", "tid1", "info1", "lille_billede", "begivenhed_info", "index_by"].join(","));
url.searchParams.set("order", "index_by.asc.nullslast");
url.searchParams.set("limit", "4");

const options = {
  headers: {
    apikey: SUPA_KEY,
    Authorization: `Bearer ${SUPA_KEY}`,
  },
};

const res = await fetch(url.toString(), options);
if (!res.ok) {
  throw new Error(`Supabase error ${res.status}: ${await res.text()}`);
}

const events = await res.json(); // already sorted & capped at 4
---

<section>
  <div class="event-wrapper">
    <!-- Images column -->
    <div class="image-column">
      {
        events.map((ev) => {
          let src = ev.lille_billede ? (ev.lille_billede.startsWith("http") ? ev.lille_billede : `/billeder/${ev.lille_billede}`) : null;
          return src ? <img class="event-image" src={src} alt={`Plakat for ${ev.by}`} /> : <div class="image-placeholder" />;
        })
      }
    </div>

    <!-- Details column -->
    <div class="event-column">
      {
        events.map((ev) => (
          <div class="event" key={ev.index_by}>
            <div class="event-date">
              <div class="event-date-inner">
                <h3>{ev.dato}</h3>
                <p>{ev.tid1}</p>
              </div>
            </div>
            <div class="event-details">
              <div class="details-text">
                <div class="event-location">{ev.index_by}</div>
                <div class="details">{ev.begivenhed_info}</div>
              </div>
              <button class="signup-button">Tilmeld dig</button>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  section {
    background-color: #fefde9;
    z-index: 2;
  }

  .event-wrapper {
    padding: 4rem;
    margin: auto;
    font-family: serif;
    display: grid;
    grid-template-columns: 120px 1fr;
    column-gap: 2rem;
    row-gap: 2rem;
  }
  .image-column,
  .event-column {
    display: grid;
    row-gap: 1.5rem;
  }
  .event-image {
    width: 100%;
    object-fit: cover;
  }
  .image-placeholder {
    width: 100%;
    aspect-ratio: 4/3;
    background: #e0e0e0;
  }
  .event {
    display: grid;
    grid-template-columns: 130px 1fr;
    align-items: center;
    position: relative;
    border-bottom: 1px solid #ccc;
    padding: 1rem 0;
  }
  .event:not(:last-child) {
    border-bottom: 1px solid #ccc;
  }
  .event:first-child {
    border-top: 1px solid #ccc;
  }
  .event-date-inner {
    font-weight: bold;
  }
  .event-date-inner h3 {
    margin: 0;
    font-size: 1.25rem;
  }
  .event-date-inner p {
    margin: 0.25rem 0 0;
    font-size: 1rem;
    color: #555;
  }
  .details-text {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    margin-left: 2rem;
  }
  .event-location {
    margin: 0;
    font-weight: bold;
    font-size: 1.5rem;
  }
  .details {
    margin: 0;
    font-size: 1.2rem;
    color: #333;
    max-inline-size: clamp(30ch, 50vw, 60ch);
    overflow-wrap: break-word;
  }
  .signup-button {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background-color: #ec5a34;
    color: white;
    padding: 0.6rem 1.2rem;
    border: none;
    border-radius: 0.4rem;
    font-weight: bold;
    font-size: 1rem;
    cursor: pointer;
  }
</style>
