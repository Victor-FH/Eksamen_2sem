---
// src/components/EventDetails.astro
interface Props {
  city: string;
}
const { city } = Astro.props;

const SUPA_URL = "https://bwzlyynicfdhqxvfotfg.supabase.co/rest/v1/begivenheder";
const SUPA_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImJ3emx5eW5pY2ZkaHF4dmZvdGZnIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDgzMjk5NjUsImV4cCI6MjA2MzkwNTk2NX0.iWIvQ6JD4u7LRTB0dUL8CuJFoys5U8sWInPGsV-kdjM";

// Build fetch URL
const url = new URL(SUPA_URL);
url.searchParams.set("select", "by,adresse,dato,tid1,info1,tid2,info2,tid3,info3,begivenhed_info,billede");
url.searchParams.set("by", `eq.${city}`);

const res = await fetch(url.toString(), {
  headers: {
    apikey: SUPA_KEY,
    Authorization: `Bearer ${SUPA_KEY}`,
  },
});
if (!res.ok) throw new Error(`Supabase error ${res.status}: ${await res.text()}`);

const rows = await res.json();
const ev = rows[0];
if (!ev) throw new Error(`Ingen event fundet for by="${city}"`);

// Collect program slots
const slots = [1, 2, 3]
  .map((i) => ({
    time: ev[`tid${i}`],
    text: ev[`info${i}`],
  }))
  .filter((s) => s.time && s.text);
---

<section class="event-container">
  <div class="plakat">
    {ev.billede && <img src={ev.billede.startsWith("http") ? ev.billede : `https://bwzlyynicfdhqxvfotfg.supabase.co/storage/v1/object/public/events/${ev.billede}`} alt={`Plakat for ${ev.by}`} />}
  </div>

  <section class="event">
    <h1>Fællesskab – <span class="highlight">{ev.by}</span></h1>
    <p class="event-dato">{ev.dato} KL {ev.tid1}</p>

    <div class="event-lokation">
      <h2>{ev.by}</h2>
      <p>{ev.adresse}</p>
    </div>

    <div class="event-tidspunkt">
      {
        slots.map(({ time, text }) => (
          <div>
            <h3>{time}:</h3>
            <p>{text}</p>
          </div>
        ))
      }
    </div>

    <div class="tilmelding">
      <h2>Meld dig til eventet</h2>
      <form>
        <input type="text" name="navn" placeholder="navn" required />
        <input type="email" name="mail" placeholder="mail" required />
        <input type="tel" name="tlf" placeholder="tlf" required />
        <button type="submit">Tilmeld dig</button>
      </form>
    </div>
  </section>

  <style>
    .event-container {
      display: flex;
      flex-direction: column;
      background-color: #fef9e9;
    }
    .plakat {
      display: none;
    }
    .plakat img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .event {
      background: #fef9e9;
      padding: 2rem 1rem;
      max-width: 1800px;
      color: #333;
    }
    h1 {
      font-size: 2.4rem;
      font-weight: bold;
      margin-bottom: -1rem;
      margin-top: 0;
    }
    .highlight {
      color: #ec5a34;
    }
    .event-dato {
      text-transform: uppercase;
      font-weight: bold;
      margin-bottom: 1rem;
    }
    .event-lokation h2 {
      margin-bottom: -20px;
      font-size: 30px;
    }
    .event-tidspunkt {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .event-tidspunkt h3 {
      margin-bottom: -10px;
      color: #ec5a34;
    }
    .tilmelding {
      margin-top: 2rem;
      text-align: center;
    }
    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      margin-top: 1rem;
    }
    input {
      width: 90%;
      max-width: 900px;
      padding: 1rem;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
    }
    button {
      max-width: 150px;
      width: 90%;
      background-color: #ec5a34;
      color: white;
      padding: 1rem;
      border: none;
      border-radius: 10px;
      font-size: 1.2rem;
      font-weight: bold;
      cursor: pointer;
    }
    button:hover {
      transform: translateY(-2px) scale(1.05);
      box-shadow: #333;
    }

    @media (min-width: 768px) {
      .event-container {
        flex-direction: row;
        height: 100vh;
      }
      .plakat {
        display: block;
        width: 50%;
      }
      .event {
        width: 50%;
        padding: 4rem;
      }
    }
  </style>
</section>
